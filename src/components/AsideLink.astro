---
import LinkIcon from "./LinkIcon.astro";
const { href, title, badge, svg } = Astro.props;
---

<li>
    <a
        href={href}
        class="flex hover:scale-105 active:scale-90 transition duration-200 justify-between items-center p-2 text-neutral-900 rounded-lg dark:text-white hover:bg-neutral-100 dark:hover:bg-neutral-700 group"
    >
        <div class="flex items-center">
            <LinkIcon title={title} />
            <span class="ms-3">{title}</span>
        </div>
        {
            badge && (
                <span
                    class={`p-1 text-xs ${badge.bg} rounded-xl ${badge.text}`}
                >
                    {badge.content}
                </span>
            )
        }
    </a>
</li>
