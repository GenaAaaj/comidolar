---
import AsideLink from "./AsideLink.astro";
---

<nav
  transition:persist
  class="fixed top-0 z-50 w-full bg-background border-b border-zinc-200 dark:bg-backgroundDark dark:border-zinc-700"
>
  <div class="px-3 py-3 lg:px-5 lg:pl-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center justify-start rtl:justify-end">
        <button
          id="toggle-sidebar"
          type="button"
          class="inline-flex items-center p-2 text-sm text-zinc-500 rounded-lg sm:hidden hover:bg-zinc-100 focus:outline-none focus:ring-2 focus:ring-zinc-200 dark:text-zinc-400 dark:hover:bg-darkless dark:focus:ring-zinc-600"
        >
          <span class="sr-only">Abrir menu</span>
          <svg
            class="w-6 h-6"
            aria-hidden="true"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              clip-rule="evenodd"
              fill-rule="evenodd"
              d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"
            >
            </path>
          </svg>
        </button>
        <a
          href="/"
          class="flex items-center ms-2 md:me-24 hover:scale-105 active:scale-90 transition duration-200"
        >
          <img
            src="/assets/img/favicon.webp"
            class="h-8 me-2"
            alt="Logo de ComiDolar"
          />
          <span
            class="text-xl font-semibold sm:text-2x inline-block leading-none whitespace-nowrap dark:text-white"
          >
            Comi Dólar <span
              class="text-xs text-green-900 bg-green-200 rounded-full p-1"
              >v3.4.5</span
            >
          </span>
        </a>
      </div>
      <div class="flex items-center">
        <div class="flex items-center gap-3 ms-3">
          <a
            title="Repositorio de GitHub"
            href="https://github.com/GenaDeev/ComiDolar"
            class="flex w-8 h-8 text-sm text-zinc-500 bg-zinc-300 rounded-full transition duration-200 hover:scale-105 hover:bg-zinc-500 hover:text-zinc-300 focus:ring-4 focus:bg-zinc-700 focus:text-zinc-200 focus:ring-zinc-300 dark:bg-darkless dark:hover:bg-zinc-800 dark:text-zinc-300 dark:hover:text-zinc-100 dark:focus:ring-zinc-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-8 h-8 bg-inherit rounded-full p-1 border"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path
                d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
              >
              </path>
            </svg>
          </a>
          <a
            title="Estado del sitio"
            href="https://status.comidolar.com.ar"
            class="flex items-center justify-center border w-8 h-8 text-sm text-zinc-500 bg-zinc-300 rounded-full transition duration-200 hover:scale-105 hover:bg-zinc-500 hover:text-zinc-300 focus:ring-4 focus:bg-zinc-700 focus:text-zinc-200 focus:ring-zinc-300 dark:bg-darkless dark:hover:bg-zinc-800 dark:text-zinc-300 dark:hover:text-zinc-100 dark:focus:ring-zinc-600"
          >
            <span
              class="w-3 h-3 text-transparent bg-gradient-to-tl from-green-600 via-green-400 to-green-200 rounded-full"
            ></span>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<aside
  transition:persist
  id="logo-sidebar"
  class="fixed top-0 left-0 z-40 w-64 h-screen pt-20 transition-transform -translate-x-full bg-background border-r border-zinc-200 sm:translate-x-0 dark:bg-backgroundDark dark:border-divider dark:text-white"
  aria-label="Sidebar"
>
  <div
    class="h-full flex flex-col justify-between px-3 pb-4 overflow-y-hidden bg-background dark:bg-backgroundDark"
  >
    <ul class="space-y-2 font-medium">
      <AsideLink
        href="/"
        title="Cotizaciones"
        badge={{
          bg: "bg-red-200",
          text: "text-red-700",
          content: "● En vivo",
        }}
      />

      <AsideLink href="/calculadora" title="Calc. Impuestos" />

      <AsideLink href="/blog" title="Blog" />

      <AsideLink href="/whatsapp" title="Grupo" />

      <AsideLink href="https://wa.me/5491127556546/" title="Contacto" />

      <AsideLink href="/donaciones" title="Donaciones" />

      <AsideLink
        href="https://mundial.comidolar.com.ar"
        title="Mundial de Comis"
      />
    </ul>
    <div class="text-zinc-600 dark:text-zinc-300">
      <a
        class="-ml-8 inline-block hover:scale-125 hover:-ml-6 transition-all"
        href="https://github.com/GenaDeev/"
        referrerpolicy="no-referrer"
        target="_blank"
        ><img
          src="/assets/img/genadev-v-nobg-1.webp"
          width="128px"
          height="128px"
          alt="Logo de GenaDeev"
        />
      </a>
      <p>
        <a
          class="font-bold hover:text-green-500 transition"
          href="https://github.com/GenaDeev/"
          referrerpolicy="no-referrer"
          target="_blank">©GenaDev</a
        >
        &
        <a
          class="font-bold hover:text-green-500 transition"
          href="https://genahost.vercel.app/"
          referrerpolicy="no-referrer"
          target="_blank">®GenaHost</a
        >
        {new Date().getFullYear()}
      </p>
      <p>Todos los derechos reservados</p>
    </div>
  </div>
</aside>

<div class="p-4 sm:ml-64">
  <div
    id="page-content"
    class="p-4 text-zinc-900 bg-background rounded-lg border border-zinc-200 shadow-sm dark:text-white dark:bg-backgroundDark dark:border-zinc-700 mt-14"
  >
    <slot />
  </div>
</div>

<style>
  #logo-sidebar {
    transition: transform 0.3s ease;
  }
</style>

<script is:inline>
  let isAsideVisible;
  let target;
  let toggle;
  let outside;

  const getStatus = () => {
    if (target.classList.contains("-translate-x-full")) {
      isAsideVisible = false;
    } else {
      isAsideVisible = true;
    }
  };

  const showSidebar = () => {
    target.classList.remove("-translate-x-full");
    isAsideVisible = true;
  };

  const hideSidebar = () => {
    target.classList.add("-translate-x-full");
    isAsideVisible = false;
  };

  const setupListeners = () => {
    toggle?.removeEventListener("click", toggleSidebar);
    outside?.removeEventListener("click", handleOutsideClick);

    target = document.getElementById("logo-sidebar");
    toggle = document.getElementById("toggle-sidebar");
    outside = document.getElementById("page-content");

    toggle?.addEventListener("click", toggleSidebar);
    outside?.addEventListener("click", handleOutsideClick);

    getStatus();
  };

  const toggleSidebar = () => {
    isAsideVisible ? hideSidebar() : showSidebar();
  };

  const handleOutsideClick = (event) => {
    if (
      isAsideVisible &&
      !target.contains(event.target) &&
      event.target !== toggle
    ) {
      hideSidebar();
    }
  };

  document.addEventListener("astro:page-load", setupListeners);

  setupListeners();
</script>
